[user]
	email = misha@farberbrodsky.com
	name = Misha Farber Brodsky
[core]
	editor = nvim
	excludesfile = /home/misha/.gitignore
[color]
	ui = true
[init]
	defaultBranch = main
[difftool]
	prompt = false
	trustExitCode = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
    tool = nvimmerge
[mergetool "nvimmerge"]
    cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"
[mergetool]
	trustExitCode = true
